{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015", "es2017", "dom", "ESNext"],
    "target": "es6",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "outDir": "temp/vscode-dist",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "library", "local", "temp", "build", "settings"]
}
